<?php

// LA MARCHE A SUIVRE TOUTE L'ANNEE POUR PDO :



// Exemple :

$login = 'sasa';

$requete = 'SELECT * FROM utilisateurs WHERE login = :login'; // On prépare la requete dans une string (pour bien la visualiser)

$result = $bdd->prepare($requete); // On ''envoie'' la requete a pdo pour qu'il la traite et sache s'il y a des erreur, et pour qu'il bind les valeurs

$result->bindValue(':login', $login); // On attribue une variable à une valeur préparé par PDO

$result->execute(); // On execute la requete une fois toutes les etapes passées

$fetch = $result->fetchAll(PDO::FETCH_ASSOC); // On récupère le resultat de la requete dans un fetch -> voir les différents fetch